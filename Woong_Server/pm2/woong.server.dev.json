{
  "apps" : [{
    "name": "woong.server.dev",
    "script": "./bin/www",
    "ignore_watch" : ["node_modules", "logs"],
    "watch_options": {
      "followSymlinks": false
    },
    "env": {
      "NODE_ENV": "development",
      "NODE_PATH": "src"
    },
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "error_file": "./logs/woong.server.dev.stderr.log",
    "out_file": "./logs/woong.server.dev.stdout.log",
    "pid_file": "./logs/woong.server.dev.pid"
  }]
}
